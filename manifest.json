{
  "manifest_version": 3,
  "name": "InSales ID",
  "description": "Вывод ID товаров и их вариантов в бэк-офисе InSales",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon@16.png",
    "24": "icons/icon@24.png",
    "32": "icons/icon@32.png",
    "48": "icons/icon@48.png",
    "128": "icons/icon@128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon@16.png",
      "24": "icons/icon@24.png",
      "32": "icons/icon@32.png",
      "48": "icons/icon@48.png",
      "128": "icons/icon@128.png"
    },
    "default_title": "Показать ID товаров и вариантов"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ]
}
